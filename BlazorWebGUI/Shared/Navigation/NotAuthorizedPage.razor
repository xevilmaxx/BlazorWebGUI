<MudCard>
    <MudCardContent>
        <h1>Sorry</h1>
        <p>You're not authorized to reach this page.</p>
        <p>You may need to log in as a different user.</p>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" StartIcon="@Icons.Filled.Login" OnClick="OnReurnToLoginButtonClicked">Login</MudButton>
    </MudCardActions>
</MudCard>

@code {

    [Inject]
    public NavigationManager Navigation { get; set; }

    void OnReurnToLoginButtonClicked()
    {
        Navigation.NavigateTo("/login");
    }

}