@*Other imports are already derived from root _Imports.razor*@

@inherits LayoutComponentBase
@layout GenericLayout

@inject NavigationManager NavigationManager


<MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Class="ml-0">
	<MudTabPanel OnClick="GoTo0" Text="Tab One">
	</MudTabPanel>
	<MudTabPanel OnClick="GoTo1" Text="Tab Two">
	</MudTabPanel>
	<MudTabPanel OnClick="GoTo2" Text="Tab Three">
	</MudTabPanel>
	<MudTabPanel Text="Tab Disabled" Disabled="true">
	</MudTabPanel>
</MudTabs>



@Body


@code {

	private Type selectedType;

	Dictionary<string, object> myDictionaryOfParameters = new Dictionary<string, object>
    {
        { "Title", "Foo Bar"}
    };

	protected override Task OnInitializedAsync()
	{
		Type ttt = typeof(Pages.WebSite.SubCategory0.SubCat00);
		selectedType = ttt;

		StateHasChanged();

		return base.OnInitializedAsync();
	}

	void GoTo0()
	{
		NavigationManager.NavigateTo("/subcat00");
	}

	void GoTo1()
	{
		NavigationManager.NavigateTo("/subcat01");
	}

	void GoTo2()
	{
		NavigationManager.NavigateTo("/subcat02");
	}

}

<DynamicComponent Type="@selectedType" Parameters="@myDictionaryOfParameters" />